<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.getgigradio.gigradio.fragment.EventDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:orientation="vertical">

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/artist_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="?android:attr/textAppearanceMedium"
            android:text="Artist name"
            app:typeface="roboto_thin"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/venue_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="?android:attr/textAppearanceMedium"
            android:text="Venue name"
            app:typeface="roboto_regular"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"  />

        <FrameLayout
            android:id="@+id/map_layout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/buttonBarStyle"
            android:orientation="vertical">

            <Button
                android:id="@+id/buy_tickets_button"
                style="@style/borderlessButtonStyleLeftAlignedBlue"
                android:text="@string/buy_tickets"
                app:holdr_onClick="true" />

            <Button
                android:id="@+id/venue_website_button"
                style="@style/borderlessButtonStyleLeftAlignedBlue"
                android:text="@string/venue_website"
                app:holdr_onClick="true" />

            <Button
                android:id="@+id/show_directions_button"
                style="@style/borderlessButtonStyleLeftAlignedBlue"
                android:text="@string/show_directions"
                app:holdr_onClick="true" />

            <Button
                android:id="@+id/share_button"
                style="@style/borderlessButtonStyleLeftAlignedBlue"
                android:text="@string/share_this_event"
                app:holdr_onClick="true" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
