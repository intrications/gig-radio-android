<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.getgigradio.gigradio">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <!-- For Google Maps -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>

    <application
        android:name="com.getgigradio.gigradio.GigRadioApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <!-- add this to application when app supports right to left -->
        <!-- http://android-developers.blogspot.co.uk/2013/03/native-rtl-support-in-android-42.html -->
        <!-- android:supportsRtl="true" -->

        <activity
            android:name="com.getgigradio.gigradio.activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>

        <!--<activity-->
            <!--android:name="com.example.android.TvActivity"-->
            <!--android:label="@string/app_name"-->
            <!--android:theme="@style/Theme.Leanback">-->

            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.MAIN" />-->
                <!--<category android:name="android.intent.category.LEANBACK_LAUNCHER" />-->
            <!--</intent-filter>-->

        <!--</activity>-->

        <service
            android:name="com.getgigradio.gigradio.playback.MediaPlayerService"
            android:enabled="true"
            android:exported="false"/>

        <receiver
            android:name="com.getgigradio.gigradio.playback.AudioBecomingNoisyReceiver"
            android:enabled="true"
            android:exported="false"/>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_api_key"/>

        <activity
            android:name="com.getgigradio.gigradio.activity.EventDetailsActivity"
            android:label="@string/title_activity_event_details"/>

        <meta-data
            android:name="com.crashlytics.ApiKey"
            android:value="4d988b2fffd55e7d936b8c75574429ef306ca234"/>
        <meta-data
            android:name="AA_DB_NAME"
            android:value="GigRadio.db"/>
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1"/>

        <service
            android:name="com.getgigradio.gigradio.service.PlaylistCreationService"
            android:enabled="true"
            android:exported="false">
        </service>
    </application>

</manifest>
